<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestAndroidPartie2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TestAndroidPartie2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MaterialCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/shadow</item>
        <item name="android:layout_marginBottom">@dimen/spacing_xxs</item>
        <item name="android:layout_marginTop">@dimen/spacing_xxs</item>
        <item name="android:layout_marginStart">@dimen/spacing_s</item>
        <item name="android:layout_marginEnd">@dimen/spacing_s</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="RoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="NormalTitle">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumTitle">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.MyDigitalExperience.PrimaryText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.MyDigitalExperience.SecondaryText" parent="Widget.AppCompat.TextView">
    <item name="android:textColor">@color/secondary_text</item>
    <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.TestAndroidPartie2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TestAndroidPartie2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>